# AutoNet Environment Configuration
# Copy this file to .env and fill in your values
# Never commit the .env file to version control!

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, staging, production
AUTONET_ENV=development

# =============================================================================
# API KEYS (RECOMMENDED - More secure than storing in config files)
# =============================================================================

# PeeringDB API Key
# Get yours at: https://www.peeringdb.com/account/api
AUTONET_PEERINGDB_KEY=your-peeringdb-api-key-here

# Encryption Key for API Key Storage
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AUTONET_ENCRYPTION_KEY=your-32-byte-base64-encryption-key

# =============================================================================
# DJANGO WEB UI SETTINGS
# =============================================================================

# Django Secret Key (REQUIRED for production)
# Generate with: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-django-secret-key-here

# Debug Mode (NEVER set to True in production)
# Options: True, False
DJANGO_DEBUG=True

# Allowed Hosts (comma-separated list)
# In production, set to your domain(s)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# SSH CONFIGURATION
# =============================================================================

# Path to SSH private key for router access
SSH_KEY_PATH=/path/to/ssh/key

# SSH username for router access
SSH_USER=autonet-deploy

# SSH connection timeout (seconds)
SSH_TIMEOUT=30

# =============================================================================
# DATABASE (Optional - defaults to SQLite)
# =============================================================================

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/autonet

# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/autonet

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional - logs to console if not set)
LOG_FILE=/var/log/autonet/autonet.log

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# Cache timeout (seconds)
# CACHE_TIMEOUT=300

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Build directory for generated configurations
AUTONET_BUILDDIR=/opt/routefilters

# Staging directory for deployment
AUTONET_STAGEDIR=/opt/router-staging

# Peerings URL (optional - can be set in config files)
# AUTONET_PEERINGS_URL=https://your-org.example.com/peerings.yaml

# =============================================================================
# MONITORING & ALERTING (Optional)
# =============================================================================

# Prometheus metrics port
# METRICS_PORT=9090

# Alert notification webhook URL
# ALERT_WEBHOOK_URL=https://your-alerting-system.com/webhook

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable/disable specific security features
# ENABLE_RPKI_VALIDATION=true
# ENABLE_IRR_FILTERING=true

# Maximum ASN value to accept
# MAX_ASN_VALUE=4294967295

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Maximum parallel deployments
# MAX_PARALLEL_DEPLOYMENTS=3

# Deployment timeout (seconds)
# DEPLOYMENT_TIMEOUT=300

# Enable dry-run mode by default
# DEFAULT_DRY_RUN=false

# =============================================================================
# DEVELOPMENT SETTINGS (for development environment only)
# =============================================================================

# Enable Django debug toolbar
# DJANGO_DEBUG_TOOLBAR=True

# Enable SQL query logging
# SQL_DEBUG=True

# Enable profiling
# ENABLE_PROFILING=False
